---
import Footer from '../components/Footer.astro';
import ProjectHeader from '../components/ProjectHeader.astro';
import Layout from '../layouts/Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | nikhilmisra.com`}>
    <ProjectHeader client:idle />

    <section class="container">
        <slot />
    </section>

    <Footer />

    <link rel="stylesheet" href="/project.css" />
</Layout>

<style>
    .container {
        margin: var(--body-margin-mobile) var(--body-margin-mobile) 0 var(--body-margin-mobile);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    @media only screen and (min-width: 1000px) {
        .container {
            margin: var(--body-margin) var(--body-margin) 0 var(--body-margin);
        }
    }
</style>
