---
import SelectionBlurrer from '../components/SelectionBlurrer.svelte';

export interface Props {
    title: string;
}

const { title } = Astro.props;

import '../global.css';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <meta property="og:image" content="https://nikhilmisra.com/nikhil.jpg" />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <slot />
            <SelectionBlurrer client:idle />
        </main>
        <script
            is:inline
            src="https://unpkg.com/@oakstudios/mechanical-ragger@0.5.0/web-component-auto-register.js"
        ></script>
        <script
            is:inline
            data-goatcounter="https://tandooriflesh.goatcounter.com/count"
            async
            src="//gc.zgo.at/count.js"></script>
    </body>
</html>
