---
import SelectionBlurrer from '../components/SelectionBlurrer.svelte';
import Password from '../components/Password.svelte';

export interface Props {
    title: string;
}

const { title } = Astro.props;

import '../global.css';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Password client:load>
            <slot />
            <SelectionBlurrer client:idle />
        </Password>
        <script
            is:inline
            src="https://unpkg.com/@oakstudios/mechanical-ragger@0.5.0/web-component-auto-register.js"
        ></script>
    </body>
</html>
