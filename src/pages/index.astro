---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.svelte';
import Text from '../components/Text.astro';
import Img from '../components/Img.astro';
import WorkItem from '../components/WorkItem.svelte';
---

<Layout title="nikhilmisra.com">
    <div class="bodyWrapper">
        <Header client:idle>
            <span slot="bio">
                <Text>
                    Nikhil Misra is a designer focusing on interactive, identity, editorial, and typographic projects.
                </Text>
            </span>
            <span slot="expanded-bio">
                <Text indented="{true}">Currently I'm a freelance designer and art director with <a class="underlined" href="https://commercialtype.com/">Commercial Type</a>.
                    Previously I was at <a class="underlined" href="https://www.hearst.com/newspapers"
                    >Hearst</a> and <a class="underlined" href="https://oak.is/">Oak Studios</a>. I hold an MPS in Communication Design from Parsons School of Design and a BFA in Graphic Design from SUNY Purchase College.                   
                </Text>
                <Text indented="{true}">
                    You can usually find me taking photos of mirrors on the street, digging for tracks, or 
                    learning something new.These days I spend time learning type design and making music.         
                </Text>
            </span>
            <span slot="about">
                <p>
                    Typeset in Gerstner Programm by
                    <a class="underlined" href="https://forgotten-shapes.com/">Forgotten Shapes</a
                    >.
                </p>
                <p>
                    Designed and developed by me along with
                    <a class="underlined" href="https://github.com/OleSkaar">Ole Skaar</a>.
                </p>
                <p>Last Updated: March 8, 2023</p>
            </span>
            <span slot="links">
                <p>(B.1991), raised, and living in New York.</p>
                <br>
                <p>Catch me elsewhere:</p>
                <p>
                    <a class="underlined" href="mailto:hello@nikhilmisra.com">Email</a>, <a class="underlined" href="https://www.instagram.com/nikhilmis/">Instagram</a>, <a
                        class="underlined" href="https://www.are.na/nikhil-misra">Are.na</a
                    >,
                    <a class="underlined" href="https://www.linkedin.com/in/nikhil-misra-41315151/">LinkedIn</a>
                </p>
            </span>
        </Header>

        <ul class="work">
            <WorkItem
            project={{
                title: 'Formula',
                url: '/work/formula',
                keywords: 'Identity, Fliers, Design System',
                year: '2023 - Ongoing',
            }}
            client:idle
        >
            <Img
                src={import('../images/formula/formula_1.png')}
                alt="Formula 01"
                className="work-image"
            />
        </WorkItem>
            <WorkItem
            project={{
                title: 'The Food Issue',
                url: '/work/foodissue',
                keywords: 'Website, Editorial Design, Art Direction',
                year: '2021-2022',
            }}
            client:idle
        >
        <video id={'foodissue'} loop muted src={'/video/foodissue_toc_website.mp4'} ></video>
         </WorkItem>

        <WorkItem
        project={{
            title: 'Misc.',
            url: '/work/inydsr',
            keywords: 'Posters, Covers, Art Direction',
            year: '2016 - Ongoing',
        }}
        client:idle
    >
        <Img
            src={import('../images/posters/lordraja_forwebsite.png')}
            alt="Lord Raja poster"
            className="work-image"
        />
    </WorkItem>

        <WorkItem
        project={{
            title: 'Houston Chronicle',
            url: '/work/houstonchronicle',
            keywords: 'Design System, Reader Experience, Product Design',
            year: '2019-2021',
        }}
        client:idle
    >
        <Img
            src={import('../images/goods/goodsmockup.png')}
            alt="Goods mockup"
        />
    </WorkItem>

            <WorkItem
            project={{
                title: 'Chron',
                url: '/work/chron',
                keywords: 'Identity',
                year: '2020',
            }}
            client:idle
        >
            <Img
                src={import('../images/goods/goodsmockup.png')}
                alt="Goods mockup"
            />
        </WorkItem>
        <WorkItem
        project={{
            title: 'Victorian Secret',
            url: '/work/victoriansecret',
            keywords: 'Album Art',
            year: '2019',
        }}
        client:idle
    >
        <Img
            src={import('../images/goods/goodsmockup.png')}
            alt="Goods mockup"
        />
    </WorkItem>
            <WorkItem
                project={{
                    title: 'Goods',
                    url: '/work/goods',
                    keywords: 'Identity, Product Design, Design System',
                    year: '2018',
                }}
                client:idle
            >
                <Img
                    src={import('../images/goods/goodsmockup.png')}
                    alt="Goods mockup"
                    className="work-image"
                />
            </WorkItem>
            <WorkItem
                project={{
                    title: 'Unfold',
                    url: '/work/unfold',
                    keywords: 'Identity, Design, System',
                    year: '2018',
                    videoId: 'unfold',
                }}
                client:idle
            >
                <video id={'unfold'} loop muted src={'/video/unfoldwebsite.mp4'}
                ></video>
            </WorkItem>
            <WorkItem
                project={{
                    title: 'Is The New York Dream Still Real?',
                    url: '/work/inydsr',
                    keywords: 'Data Visualization, Installation, AR',
                    year: '2017',
                }}
                client:idle
            >
                <Img
                    src={import('../images/itnydsr/showcase.jpg')}
                    alt="INYDSR showcase"
                    className="work-image"
                />
            </WorkItem>
          
        </ul>
    </div>

    <style>
        body {
            background-color: var(--black);
            color: var(--white);
            overflow-x: hidden;
        }

        .bodyWrapper {
            padding: 25px;
        }

        .work {
            margin-top: 100px;
        }

        .work :global(a) {
            transition: filter 0.1s;
        }

        .work.hover :global(a) {
            opacity: 0.5;
            filter: blur(3px);
        }

        .work :global(a:hover) {
            opacity: 1;
            filter: unset;
        }

        .work-image {
          max-width: 50vw;
        }
    </style>
</Layout>
