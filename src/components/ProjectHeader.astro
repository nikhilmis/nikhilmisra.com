---
import HoverName from './HoverName.svelte';
---

<header>
    <div class="title">
        <HoverName invert client:idle />
    </div>
    <div class="spacer"></div>
</header>

<style>
    header {
        display: flex;
        padding: var(--body-margin-mobile);
    }

    .title {
        display: block;
        
    }

    .title .hover-image {
      filter: invert(1) !important;
    }

    .spacer {
        flex-basis: 10;
    }

    @media only screen and (min-width: 1000px) {
      header {
        padding: var(--body-margin);
      }
    }
</style>
