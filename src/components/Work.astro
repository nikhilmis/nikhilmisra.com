---
import Img from './Img.astro';
import WorkItem from './WorkItem.svelte';
import { Image } from '@astrojs/image/components';

const { projects } = Astro.props;
const supportExtensions = ['.png']
---

<ul class="work">
    <slot />
</ul>

<style>
    .work {
        width: 100%;
        margin-top: 100px;
    }

    .work li {
        margin-bottom: 40px;
    }

    .work img,
    .work video {
        width: 1100px;
        position: fixed;
        top: 200px;
        left: 400px;
        opacity: 0;
        z-index: -1;
        transition: opacity 600ms;
        transform: translate(-50%, -50%);
    }

    .work a:hover img,
    .work a:hover video {
        opacity: 0.6;
    }

    .grid:hover .underlined.animated-underline:after {
        width: 100%;
        background: var(--white);
    }
</style>

